<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="~/Content/bootstrap.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/bootstrap-theme.css" type="text/css" />

    <script src="~/scripts/jquery-3.1.1.js"></script>
    <script src="~/scripts/jquery.validate.js"></script>
    <script src="~/scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/scripts/jquery.unobtrusive-ajax.js"></script>
</head>

<body>
    <div class="navbar navbar-inverse" role="navigation">
        <div class="nav navbar-nav">
            <a href="~/Home/Index" class="navbar-brand">Home</a>
            <a href="~/Home/Rooms" class="navbar-brand">Bookings</a>
            @Html.Partial( "AdminMenuPartial" );
        </div>
        @Html.Action( "LoginLogoutPartial", "Account" )
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; Hotel app </p>
        </footer>
    </div>
</body>
</html>